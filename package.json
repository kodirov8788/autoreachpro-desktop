{
  "name": "autoreach-pro-desktop",
  "version": "1.0.0",
  "description": "AutoReach Pro Desktop App - WebSocket-based form automation",
  "main": "main.js",
  "private": true,
  "scripts": {
    "build": "tsc && npm run copy-renderer",
    "copy-renderer": "shx mkdir -p dist/renderer && shx cp -r src/renderer/* dist/renderer/",
    "start": "electron .",
    "start:build": "npm run build && electron .",
    "dev": "electron .",
    "dev:test": "node dev-test.js",
    "dev:watch": "nodemon --exec ts-node src/main/main.ts",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "puppeteer",
    "automation",
    "websocket"
  ],
  "author": "AutoReach Pro Team",
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^24.22.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^22.7.5",
    "@types/ws": "^8.18.1",
    "electron": "^27.3.11",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.autoreachpro.desktop",
    "productName": "AutoReach Pro デスクトップ",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "electron-ui.html",
      "dist/**/*",
      "node_modules/**/*",
      "logo-black.png",
      "icon.icns",
      "!src/**",
      "!node_modules/puppeteer/.local-chromium/**/*"
    ],
    "asar": false,
    "icon": "icon.icns",
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "identity": null,
      "icon": "icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "logo-black.png"
    }
  }
}
